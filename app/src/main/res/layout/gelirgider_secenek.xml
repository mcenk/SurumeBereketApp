<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.SurumeBereket.GelirGiderAlt.GelirGiderSecenek"
    >

    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:id="@+id/gelirgider_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@color/hint"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/gelirgider_menu">


    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <FrameLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/gelirgider_main_frame"
        android:layout_above="@id/gelirgider_bottom_nav"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        />


</RelativeLayout>