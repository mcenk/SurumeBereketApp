<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:layout_margin="15dp"

    android:elevation="5dp"
    android:outlineSpotShadowColor="@color/anaEkranTakvim"
    android:outlineAmbientShadowColor="@color/anaEkranTakvim"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/gelir_linear_root"
        android:background="#B4F19C"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Kategori"
            android:textSize="17dp"

            android:textColor="@color/grey"
            android:id="@+id/dash_gelir_kategoriTx"
            android:textAppearance="?android:textAppearanceLarge"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Tutar"
            android:layout_marginRight="6dp"
        android:layout_weight="1.3"
            android:id="@+id/dash_gelir_tutarTx"
            android:textSize="17dp"
            android:textColor="@color/grey"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:textAppearanceLarge"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="TL"
        android:textSize="17dp"
        android:layout_weight="1.7"
        android:textColor="@color/grey"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:textAppearanceLarge"
        />

</LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17dp"

            android:textColor="@color/grey"
            android:text="01 Ocak 2020"
            android:id="@+id/dash_gelir_tarihTx"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:textAppearanceLarge"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>