<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="308dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hayvan_ekle"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/hay_yenidogumekle_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textSize="15sp"

            android:layout_marginBottom="20dp"
            android:background="@drawable/hayvan_ekle_button"
            android:text="YENİ DOĞUM EKLE"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/hay_disiekle_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:background="@drawable/hayvan_ekle_button"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:text="DİŞİ HAYVAN EKLE" />


        <Button
            android:id="@+id/hay_erkekekle_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/hayvan_ekle_button"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textSize="15sp"

            android:layout_gravity="center"
            android:layout_marginBottom="33dp"
            android:text="ERKEK HAYVAN EKLE" />
    </LinearLayout>


</LinearLayout>
